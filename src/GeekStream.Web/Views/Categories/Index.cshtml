@model GeekStream.Core.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="card mb-2">
    <div class="card-body align-items-center">
        <div class="card-navbar justify-content-between">
            <h3 class="card-title">@Model.Name</h3>
            <button class="btn btn-primary">Подписаться</button>
        </div>
    </div>
</div>

@foreach (var item in Model.Articles)
    {
            <div class="card mb-2">
                <div class="card-body">
                    <div class="card-navbar">
                        <p>@Html.DisplayFor(modelItem => item.Category)</p>
                        <p>@Html.DisplayFor(modelItem => item.PublishedDate)</p>
                        <p>@Html.DisplayFor(modelItem => item.Author)</p>
                    </div>
                    <a  asp-controller="Articles" asp-action="Details" asp-route-id="@item.Id">
                        <h3 class="card-title"> @Html.DisplayFor(modelItem => item.Title)</h3>
                    </a>
                    <p>@Html.DisplayFor(modelItem => item.Content)</p>
                    <div class="text-right mb-0">
                        <p>@Html.DisplayFor(modelItem => item.Rating)</p>
                    </div>
                </div>
            </div>
    }
